                    </footer>
                </form>
            </field>
        </record>
        <record id="product_locations_after_tree_view" model="ir.ui.view">
            <field name="name">Product Locations After</field>
            <field name="model">product.locations.detail.after</field>
            <field name="arch" type="xml">
                <tree string="Locations After" create="false" delete="false" edit="false">
                    <field name="name"/>
                    <field name="location_id"/>
                    <field name="complete_name"/>
                    <field name="quantity"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>